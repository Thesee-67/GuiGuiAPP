# ============================================
# Training Escalade - Configuration
# ============================================
# IMPORTANT : Copier ce fichier en .env et remplir avec tes vraies valeurs !
# Ne JAMAIS commit le fichier .env (il contient des mots de passe)
# ============================================

# === APPLICATION ===
APP_NAME="Training Escalade"
APP_VERSION="1.0.0"
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=False
ENVIRONMENT=production

# URL de l'application
APP_URL=https://training.climbingthenet.fr

# === SÉCURITÉ ===
# Générer une clé secrète forte :
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-MOI-avec-une-cle-ultra-secrete-aleatoire-32-caracteres-minimum

# Algorithme JWT
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === BASE DE DONNÉES ===
# Type : mysql ou sqlite
DATABASE_TYPE=mysql

# MySQL (production)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=training_escalade
DB_USER=training_user
DB_PASSWORD=MOT_DE_PASSE_MYSQL_ULTRA_SECRET

# === EMAIL SERVICE ===
SMTP_ENABLED=True
SMTP_HOST=mail.climbingthenet.fr
SMTP_PORT=465
SMTP_USE_TLS=True
SMTP_USERNAME=noreply@training.climbingthenet.fr
SMTP_PASSWORD=MOT_DE_PASSE_EMAIL_SECRET
SMTP_FROM_EMAIL=noreply@training.climbingthenet.fr
SMTP_FROM_NAME=Training Escalade

# === VÉRIFICATION EMAIL ===
EMAIL_VERIFICATION_REQUIRED=True
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# === RESET PASSWORD ===
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=2

# === UPLOADS ===
UPLOAD_DIR=public_html/uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# === BACKUP ===
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# === LOGS ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === PREMIER ADMIN ===
FIRST_ADMIN_EMAIL=admin@example.com
FIRST_ADMIN_USERNAME=admin
FIRST_ADMIN_PASSWORD=ChangeMe123!