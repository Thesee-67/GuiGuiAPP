# ============================================
# Training Escalade - Configuration
# ============================================
# IMPORTANT : Copier ce fichier en .env et remplir avec tes vraies valeurs !
# Ne JAMAIS commit le fichier .env (il contient des mots de passe)
# ============================================

# === APPLICATION ===
APP_NAME="Training Escalade"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production

# URL de l'application
APP_URL=https://training.climbingthenet.fr

# === SÉCURITÉ ===
# Générer une clé secrète forte :
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-MOI-avec-une-cle-ultra-secrete-aleatoire-32-caracteres-minimum

# JWT Token
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === BASE DE DONNÉES MYSQL ===
DATABASE_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=training_escalade
DB_USER=training_user
DB_PASSWORD=ton-mot-de-passe-mysql-ici

# === EMAIL SERVICE (SMTP) ===
SMTP_ENABLED=True
SMTP_HOST=mail.climbingthenet.fr
SMTP_PORT=465
SMTP_USE_TLS=True
SMTP_USERNAME=noreply@climbingthenet.fr
SMTP_PASSWORD=ton-mot-de-passe-email-ici
SMTP_FROM_EMAIL=noreply@climbingthenet.fr
SMTP_FROM_NAME=Training Escalade

# === VÉRIFICATION EMAIL ===
EMAIL_VERIFICATION_REQUIRED=True
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# === RESET PASSWORD ===
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=2

# === UPLOADS ===
UPLOAD_DIR=/home/ton-user/training-escalade/public_html/uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# === RATE LIMITING (optionnel) ===
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# === BACKUP (optionnel) ===
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# === LOGS ===
LOG_LEVEL=INFO
LOG_FILE=/home/ton-user/training-escalade/logs/app.log

# === PREMIER UTILISATEUR (ADMIN) ===
# Le premier compte créé sera automatiquement admin
# Tu peux pré-créer un compte admin au démarrage (optionnel)
FIRST_ADMIN_EMAIL=olivier_guittet@guigui.climbingthenet.fr
FIRST_ADMIN_USERNAME=olivier
FIRST_ADMIN_PASSWORD=MotDePasseTemporaire2024!